<h1><%= @attraction.name %></h1>

<% if !admin? %>
	<%= form_tag "/attractions/#{@attraction.id}/go_on_ride", method: :post %>
		<%= submit_tag "Go on this ride" %>
	
	<br>
	<%= render partial: 'users/user_info', locals: {user: current_user} %>

<% else %>
	<%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>

<% end %>